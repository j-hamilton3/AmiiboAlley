<div class="container">
  <div class="columns is-centered">
    <div class="column is-half">
      <h2 class="title is-4 has-text-centered">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "label" %><br />
          <div class="control">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %><br />
          <div class="control">
            <% if @minimum_password_length %>
              <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
              <p class="help is-danger"><%= "Minimum #{@minimum_password_length} characters." %></p>
            <% else %>
              <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
            <% end %>
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "label" %><br />
          <div class="control">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :name, class: "label" %><br />
          <div class="control">
            <%= f.text_field :name, class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :address, class: "label" %><br />
          <div class="control">
            <%= f.text_field :address, class: "input" %>
          </div>
        </div>

        <div class="field">
          <%= f.label :province_id, "Province", class: "label" %><br />
          <div class="control">
            <%= f.collection_select :provinceId, Province.all, :id, :provinceName, { include_blank: false }, { class: "select is-medium" } %>
          </div>
        </div>

        <div class="field">
          <%= f.label :postal_code, class: "label" %><br />
          <div class="control">
            <%= f.text_field :postalCode, class: "input" %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit "Sign up", class: "button is-primary is-fullwidth" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
